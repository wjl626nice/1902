<form bindsubmit="formSubmit">
<view class='head'>
  <text class='head-text'>反馈</text>
</view>
<view class='text'>
  <textarea  name="text" maxlength='120' placeholder="留下您的建议" 
  value="{{textareaVal}}"
placeholder-class='placeholder' bindinput='textInput'></textarea>
  <view class='text-index'>{{num}}/120</view>
</view>
<button class='button' formType="submit">提交</button>

</form>
