.active-list{
  border-radius: 10rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  height: 190rpx;
  background: white;
  display: flex;
  align-items: center;
  box-shadow:0px 1px 3px 3px #eee;
}
.img-box{
  display: flex;
  width: 130rpx;
  height: 130rpx;
  margin-left: 30rpx;
  background: #FFFFFF;
}
.img-box image{
  width: 100%;
  height: 100%;

}
.active-introduce{
  width: 470rpx;
  height: 130rpx;
  margin-left: 30rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.active-list-title{
  font-size: 30rpx;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #333333;
}
.active-list-singure{
  font-size: 20rpx;
  width: 100%;
  overflow: hidden;
   text-overflow: ellipsis;
   white-space: nowrap;
  color: #999999;
}
.active-list-detail{
  font-size: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.signUp{
  color:#389E0D;
}
.leave{
  color: #FF5050;
}
.arrow{
  height: 30rpx;
  width: 30rpx;
}

.lookMore{
  font-size: 32rpx;
  color:#666666;
  margin-top: 25rpx; 
  text-align:center;
}